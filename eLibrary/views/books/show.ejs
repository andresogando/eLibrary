<% include ../partials/header %>

<div class= "container">
    <div class="row">
        <div class="col-md-3">
        <p class="lead">E-Libray</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
            
        </div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
            <img class="img-fluid" src="<%= Book.image %>">
            <div class="caption-full">
                <h4 class="float-right">$<%=Book.price%></h4>
                <h4><a href=""><%=Book.name%></a></h4>
                <p><%= Book.description %></p>
                <p>
                <em>Submited By <%= Book.author.username %></em> 
                </p>
                <% if(currentUser && Book.author.id.equals(currentUser._id)){ %>
                <a class="btn btn-warning" href="/Books/<%=Book._id%>/edit">Edit</a>
                <form id="delete-form" action="/Books/<%=Book._id%>?_method=delete" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
 
                
            </div>
            <div class="well">
                <div class="text-right">
                <p>
                    <a class="btn btn-success" href="/Books/<%= Book._id %>/comments/new">Add New Comment</a>
                </p>
                </div>
                <hr>
                    <% Book.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">tantos.. dias..</span>
                             <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                                href="/Books/<%= Book._id %>/comments/<%= comment._id %>/edit"> Edit
                            </a>
                           <form id="delete-form" action="/Books/<%= Book._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                          </form>
                          <% } %>
                        </div>
                    </div>
                <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

<% include ../partials/footer %>