<% include ../partials/header %> 


<!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
      <h1 class="display-3"> Welcome! <%= currentUser.username%></h1>
      <p class="lead">eLibrary Books system!</p>
      <%if(currentUser.isAdmin){%>
                <p>
                <a class="btn btn-lg btn-primary" href="/Books/new">Add New Book</a>
                </p>
                <%} %>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
    <% Books.forEach(function(Books){ %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src="<%= Books.image %>" alt="">
          <div class="card-body">
            <h4 class="card-title"><h5><%= Books.name %></h5></h4>
            <p class="card-text"><%=Books.description%></p>
          </div>
          <div class="card-footer">
            <a href="/Books/<%= Books._id %>" class="btn btn-primary">More Info!</a>
          </div>
        </div>
      </div>
      <% }); %>

 
<% include ../partials/footer %>

