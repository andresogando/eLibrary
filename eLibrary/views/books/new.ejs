<% include ../partials/header %> 

<div class="container">
    <div class="">
        <h1 style="text-align: center">Create a New book</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books" method="POST">
            <div class="form-group">
            <input class="form-control" type="text"  placeholder="name" name="name" value="" required>
            </div>
            <div class="form-group">
            <input class="form-control" type="number"  placeholder="price" name="price" value="" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
            <input class="form-control" type="text"  placeholder="image url" name="image" value="" required>
            </div>
            <div class="form-group">
            <input class="form-control" type="text"  placeholder="Description" name="description" value="" required>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit"> Submit! </button>
            </div>
        </form>
        <a href="/books">go back!</a>
    </div>
        

        
